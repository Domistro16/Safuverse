# NexID v2 Environment Variables
# Base Chain Configuration

# ===========================================
# Public (exposed to browser)
# ===========================================

# Chain ID: 8453 for Base Mainnet, 84532 for Base Sepolia
NEXT_PUBLIC_CHAIN_ID=8453

# Core contract addresses (update after deployment)
NEXT_PUBLIC_CONTROLLER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_RESOLVER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PRICE_ORACLE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PREMIUM_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_AUCTION_ADDRESS=0x0000000000000000000000000000000000000000

# RPC URL
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# WalletConnect Project ID
NEXT_PUBLIC_WALLETCONNECT_ID=your_project_id_here

# Privy App ID (optional - for embedded wallets)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# Subgraph URL (optional - for GraphQL queries)
NEXT_PUBLIC_SUBGRAPH_URL=https://api.studio.thegraph.com/query/xxxxx/safudomains-base/version/latest

# ===========================================
# Private (server only - API routes)
# ===========================================

# Signer private key for referral signature generation
SIGNER_PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE

# Base RPC URL (can be different from public for server-side calls)
RPC_URL=https://mainnet.base.org

# Contract addresses for server-side operations
REFERRAL_VERIFIER_ADDRESS=0x0000000000000000000000000000000000000000
NAME_WRAPPER_ADDRESS=0x0000000000000000000000000000000000000000
BASE_REGISTRAR_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# V2 Account Abstraction (ERC-4337)
# ===========================================

# Public AA addresses (browser-exposed)
NEXT_PUBLIC_ACCOUNT_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
NEXT_PUBLIC_ENTRY_POINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

# Pimlico Bundler (ERC-4337 bundler service)

# Optional: Relayer Private Key (for sponsored registrations)
RELAYER_PRIVATE_KEY=0x_YOUR_RELAYER_KEY_HERE

